@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>DEPARTMAN ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>
        @k.DepartmanID
    </td>
    <td>
        @k.DepartmanAd
    </td>
    <td><a href="/Departman/DepartmanSil/@k.DepartmanID" class="btn btn-danger">SİL</a></td>
    <td><a href="/Departman/DepartmanGetir/@k.DepartmanID" class="btn btn-success">GÜNCELLE</a></td>
    <td><a href="/Departman/DepartmanDetay/@k.DepartmanID" class="btn btn-primary">DEPARTMAN DETAY</a></td>
</tr>
    }
</table>
<a href="/Departman/DepartmanEkle/" class="btn btn-primary">Departman Ekle</a>

